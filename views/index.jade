extends layout

block content
  h1= title
  p Welcome to #{title}

  div
    input(type='text', ng-model='yourname', placeholder='enter a name here')
    br
    br
    br
    h1 Hello {{yourname}}

  div(ng-init='users=[{"name": "tonnie"}, {"name": "Lisa"}]')
    ul
      li(ng-repeat='user in users')
        {{user.name}}

  script(src='/javascripts/geolocate.js')
